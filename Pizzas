import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{

        Scanner sc=new Scanner(System.in);
        int n,k,r;
        n= sc.nextInt();
        k=sc.nextInt();
        r=sc.nextInt();
        System.out.println((n-k)*r);
	}
}
